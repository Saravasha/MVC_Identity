@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Show All Users";
}

<h1>Show All Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>

        </tr>
    </thead>
@foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-action="ShowUserRoles" asp-route-id="@user.Id" class="btn btn-primary">Check Roles</a>
            </td>
        </tr>
    }
</table>